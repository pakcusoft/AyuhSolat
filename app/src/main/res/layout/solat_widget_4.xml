<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.JomSolat.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.JomSolat.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/solat_widget_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_date_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txlabelue_subuh_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Subuh"
                android:textFontWeight="500"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txlabelue_zohor_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Zohor"
                android:textFontWeight="500"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/tlabellue_asar_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Asar"
                android:textFontWeight="500"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txt_label_maghrib_w"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Maghrib"
                android:textFontWeight="500"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txlabelue_isyak_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Isyak"
                android:textFontWeight="500"
                android:textColor="@color/black_overlay" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_value_subuh_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_solat_box"
                android:gravity="center"
                android:text="00:00am"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txt_value_zohor_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_solat_box"
                android:gravity="center"
                android:text="00:00am"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txt_value_asar_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_solat_box"
                android:gravity="center"
                android:text="00:00am"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txt_value_maghrib_w"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_solat_box"
                android:gravity="center"
                android:text="00:00am"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/txt_value_isyak_w"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_solat_box"
                android:gravity="center"
                android:text="00:00am"
                android:textColor="@color/black_overlay" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>